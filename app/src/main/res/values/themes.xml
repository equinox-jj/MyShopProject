<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyShopProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/bg_status_bar</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/bg_status_bar</item>
    </style>

    <style name="Ctm.Button.Login" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bg_button_login</item>
        <item name="android:background">@drawable/bg_button_login</item>
    </style>

    <style name="Ctm.Button.SignUp" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bg_button_login</item>
        <item name="android:background">@drawable/bg_button_sign_up</item>
    </style>

</resources>