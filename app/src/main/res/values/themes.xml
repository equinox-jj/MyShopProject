<resources>

    <style name="Theme.MyShopProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/primaryLightColor</item>
        <item name="bottomSheetDialogTheme">@style/RoundedBottomSheetTheme</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/primaryLightColor</item>
        <item name="bottomSheetDialogTheme">@style/RoundedBottomSheetTheme</item>
    </style>

    <style name="Ctm.Button.Auth" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:background">@drawable/bg_button_auth_navigate</item>
    </style>

    <style name="Ctm.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_select_image_dialog</item>
    </style>

    <style name="Ctm.ImageDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">3dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/button_color</item>
    </style>

    <style name="RoundedBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>

</resources>