<resources>

    <style name="Theme.MyShopProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/primaryLightColor</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/primaryLightColor</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">

    </style>

    <style name="Ctm.Button.Login" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bg_button_pink</item>
        <item name="android:background">@drawable/bg_button_login</item>
    </style>

    <style name="Ctm.Button.SignUp" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bg_button_pink</item>
        <item name="android:background">@drawable/bg_button_sign_up</item>
    </style>

    <style name="Ctm.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_select_image_dialog</item>
    </style>

</resources>