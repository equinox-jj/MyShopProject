<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSortedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/sorted_by" />

    <RadioGroup
        android:id="@+id/rgDialogSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbDialogSortAtoZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="From A To Z"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbDialogSortZtoA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="From Z To A"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvDialogSortOk"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="end"
        android:text="Ok" />

</LinearLayout>