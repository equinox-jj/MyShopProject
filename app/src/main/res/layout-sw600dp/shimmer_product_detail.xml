<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:shimmer_duration="1000">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="16dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView3"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView4"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView3"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView4"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView4"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView6"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView2"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView2"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView16"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView4"
        app:riv_corner_radius="15dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView6" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView8"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView6"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView11"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="32dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toEndOf="@+id/roundedImageView8"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView8"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView10"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView8"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView8"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView9"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView11"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView10"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView13"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView16"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView11"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView14"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginEnd="32dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintEnd_toStartOf="@+id/roundedImageView13"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView13"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView12"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView13"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView9"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView15"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView14"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView12"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView17"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginTop="64dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView10"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView10"
        app:riv_corner_radius="15dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@color/shimmer_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView12"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView17"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView17"
        app:riv_corner_radius="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>